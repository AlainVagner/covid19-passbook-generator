{
    "name": "covid19-passbook-generator",
    "version": "1.0.0",
    "description": "A simple PWA to scan your EU digital COVID Certificate and generate a passbook from it",
    "main": "index.html",
    "repository": "git@github.com:clawfire/covid19-passbook-generator.git",
    "author": "Thibault Milan <hello@thibaultmilan.com>",
    "license": "NoHarm-draft",
    "private": false,
    "dependencies": {
        "handlebars": "^4.7.7",
        "parcel-bundler": "^1.12.5",
        "qr-scanner": "^1.2.0"
    },
    "devDependencies": {
        "sass": "^1.34.1"
    },
    "scripts": {
        "start": "parcel serve src/index.html --https && cp node_modules/qr-scanner/qr-scanner-worker.min.js dist/qr-scanner-worker.min.js",
        "build": "parcel build src/index.html && cp node_modules/qr-scanner/qr-scanner-worker.min.js dist/qr-scanner-worker.min.js"
    }
}
